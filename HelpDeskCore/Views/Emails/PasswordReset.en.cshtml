@model HelpDeskCore.ViewModels.Emails.ResetPasswordViewModel

@{
    Layout = null;
    var url = $"{Model.BaseUrl}?pwdreset=1&username={Model.UserName}&token={Model.Token}";
}
<p>Click <a href="@url">here</a> to reset your Help Desk password or copy and paste the following link into your browser's address bar: @url</p>
<p>If you did not request this password reset, you can safely ignore this message.</p>
<hr />
<p>@Model.AppName</p>
