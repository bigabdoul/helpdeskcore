    var url = $"{Model.BaseUrl}?pwdreset=1&username={Model.UserName}&token={Model.Token}";
}
<p>Cliquez <a href="@url">ici</a> pour redéfinir votre mot de passe Help Desk ou copiez puis collez le lien suivant dans la barre d'adresse de votre navigateur : @url</p>
