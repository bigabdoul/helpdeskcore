@model IEnumerable<HelpDeskCore.Data.Entities.Comment>

@{
  Layout = null;
}
<h3>Messages r√©cents</h3>
<table style="width:100%;">
  @foreach (var item in Model)
  {
    <tr>
      <td valign="top">
        <img class="avatar" src="data:image/png;base64," alt="avatar" style="vertical-align: middle;width: 32px;height: 32px;border-radius: 5px;">
        @if (item.User.IsTech)
        {
          <img src="data:image/png;base64," class="wrench" style="width: 24px;position: absolute;top: 15px;left: 17px;margin-bottom: -8px;">
        }
      </td>
      <td valign="top">
        <div style="border: 1px solid #eee;margin-bottom: .5rem;">
          <div style="margin-bottom: 0px;background-color: rgba(0, 0, 0, 0.03);padding: .5rem;">
            <p style="margin: 0 0 .3rem;">@item.User.FullName(true)</p>
            <p style="margin: 0;color: gray;font-size: 85%;font-style: italic;">@item.CommentDate.ToString("dd/MM/yyyy @ HH:mm")</p>
          </div>
          <div style="flex: 1 1 auto;padding: .5rem;background-color:#fff;">@item.Body</div>
        </div>
        <span style="color: gray;font-size: 85%;font-style: italic;">@HelpDeskCore.Data.Extensions.UtilExtensions.TranslateTime(item.CommentDate)</span>
      </td>
    </tr>
  }
</table>
